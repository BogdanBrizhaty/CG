<UserControl
    x:Class="Lab1.Controls.NumericUpDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lab1.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="container"
    d:DesignHeight="30"
    d:DesignWidth="130"
    mc:Ignorable="d">
    <Grid Height="30">
        <TextBox
            x:Name="textBox"
            Width="80"
            Height="23"
            Margin="1,1,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding ElementName=container, Path=Value}"
            TextWrapping="Wrap" />
        <Button
            x:Name="button"
            Width="23"
            Height="23"
            Margin="84,1,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="button_Click"
            Content="+" />
        <Button
            x:Name="button1"
            Width="23"
            Height="23"
            Margin="107,1,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="button1_Click"
            Content="-" />

    </Grid>
</UserControl>
